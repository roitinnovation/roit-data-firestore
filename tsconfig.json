{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2021",
        "declaration": true,
        "module": "commonjs",
        "outDir": "dist",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictPropertyInitialization": false,
        "lib": ["dom", "es2021"],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.txt",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}